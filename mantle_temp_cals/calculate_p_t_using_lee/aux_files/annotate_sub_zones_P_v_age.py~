def annotate_zones():
	import matplotlib.pyplot as plt
	fs=30
	plt.annotate("New Britain",xy = (1.6,2.4),xycoords='data',fontsize=fs,rotation=90)
	plt.annotate("South Sandwich",xy = (3.3,2.9),xycoords='data',fontsize=fs,rotation=90)
	plt.annotate("Tonga",xy = (10.3,2),xycoords='data',fontsize=fs,rotation=90)
	plt.annotate("Southern Marianas",xy = (21,2.8),xycoords='data',fontsize=fs,rotation=90)
	plt.annotate("Kermadec",xy = (24.5,2.9),xycoords='data',fontsize=fs,rotation=90)
	plt.annotate("Lesser Antilles",xy = (46,2.8),xycoords='data',fontsize=fs,rotation=90)
	plt.annotate("Izu",xy = (50,3),xycoords='data',fontsize=fs,rotation=90)
